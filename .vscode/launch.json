    "version": "0.2.0",
    "configurations": [
        

        {
            "type": "node",
            "request": "launch",
            "name": "Debug for BE Inventory Project",
            "args": ["${workspaceFolder}/src/main.ts"],
            "runtimeArgs": ["--nolazy","-r","ts-node/register", "-r", "tsconfig-paths/register"],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "program": "${workspaceFolder}/src/main.ts",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        }
    ]
}